{
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", ".next/**"]
    },
    "server#build": {
      "dependsOn": ["forms#build"]
    },
    "client#build": {
      "dependsOn": ["forms#build"]
    },
    "push": {
      "dependsOn": ["build"],
      "cache": false
    },
    "start": {
      "dependsOn": ["build", "push"],
      "cache": false
    },
    "dev": {
      "cache": false
    }
  }
}
